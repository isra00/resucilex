{% extends "base.twig" %}

{% block content %}
	
	<section class="main view-word">
		
		<header class="word-small-header">
			<h1>{{ word }}</h1>
			<h5>{% trans with {'%total_occurences': total_occurences, '%total_songs%': songs|length } %}appears <strong>%total_occurences%</strong> times in <strong>%total_songs%</strong> song(s){% endtrans %}</h5>
		</header>

		<section>

			<div class="song-list">
				<h3 class="big-only">{% trans with {'%word%': word} %}Songs where the word <strong>%word%</strong> appears:{% endtrans %}</h3>
				<ul>
					{% for song in songs %}
					<li>
						<a href="{{ word }}#song{{ song.id_song }}">
						{{ song.title }}
						<small>{{ song.occurences }}</small></a>
					</li>
					{% endfor %}
				</ul>
			</div>

			<section class="song-contents">

				<h1 class="big-only">{{ word }}</h1>
				<h5 class="big-only">{% trans with {'%total_occurences': total_occurences, '%total_songs%': songs|length } %}appears <strong>%total_occurences%</strong> times in <strong>%total_songs%</strong> song(s){% endtrans %}</h5>

				{% for song in songs %}
				<article class="song {{ app.locale }}">
					<a name="song{{ song.id_song }}"></a>
					<span class="page">{{ song.page }}</span>
					<header>
						<h3>{{ song.title }}</h3>
						<h4>{{ song.subtitle }}</h4>
					</header>
					<div class="lyrics">{{ song.text|raw|nl2br }}</div>
				</article>
				{% endfor %}

			</section>
		</section>
	</section>

{% endblock %}
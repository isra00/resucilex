<!doctype html>
<html lang="{{ app.locale }}">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>{% if pageTitle is defined %}{{ pageTitle }} | {% endif %}{% trans %}Lexicon of the He Rose From Death{% endtrans %}</title>
	{% if not app.debug %}<link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:700|Roboto:100,400,400i,700" rel="stylesheet"> {% endif %}
	<link rel="stylesheet" href="{{ global.request.basepath }}/style.css" type="text/css" />
	
	<meta name="description" 			content="{% trans %}Lexical concordance of the songbook of the Neocatechumenal Way. Very useful for choosing songs that fit a liturgical celebration.{% endtrans %}" />
	<meta name="keywords" 				content="{% trans %}lexicon of neocatechumenal songs, words of neocatechumenal songs, songs of the way, songs of neocatechumenal way{% endtrans %}" />

	<meta property="og:url" 			content="{{ app.absoluteUriWithoutQuery }}">
	<meta property="og:title" 			content="{% if pageTitle is defined %}{{ pageTitle }} | {% endif %}{% trans %}Lexicon of the He Rose From Death{% endtrans %}">
	<meta property="og:description" 	content="{% trans %}Lexical concordance of the songbook of the Neocatechumenal Way. Very useful for choosing songs that fit a liturgical celebration.{% endtrans %}">
	<meta property="og:site_name" 		content="{% trans %}Lexicon of the He Rose From Death{% endtrans %}">
	<meta property="og:type" 			content="website">
	<meta property="og:image" 			content="{{ app.absoluteBasePath }}/mkt-{{ app.locale}}.200.png">
	<meta property="og:image:type" 		content="image/png">
	<meta property="og:image:width" 	content="200">
	<meta property="og:image:height"	content="200">

	{% if hrefLangs is defined %}
	{% for locale, url in hrefLangs %}
		<link rel="alternate" href="{{ url }}" hreflang="{{ locale }}" />
	{% endfor %}
	{% endif %}
	<link rel="alternate" href="{{ app.absoluteBasePath }}" hreflang="x-default" />

	<script>
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

		ga('create', 'UA-57809429-2', 'auto');
		ga('send', 'pageview');
	</script>

</head>

<body class="{{ bodyClass|default() }}">

	<div class="wrapper">

		<header class="main-header">
			<div class="inside">
				
				<h2><a href="{{ path('home') }}">{% trans %}Lexicon <span class="print-only">of the</span> <strong>He Rose</strong>{% endtrans %}</a></h2>

				<nav class="language">
					<a href="{{ path('home', {'_locale': app.locale == 'es' ? 'en' : 'es'}) }}">{% if app.locale == 'es' %}<span class="tiny-invisible">View in </span>English{% else %}<span class="tiny-invisible">Ver en </span>español{% endif %}</a>
				</nav>
			</div>
		</header>

{% block content %}{% endblock %}

		<div class="push"></div>
	</div>

{% if not noFooter is defined %}
	<footer class="main-footer">
		<h3 class="print-only">{{ global.request.getHttpHost }}</h3>
		{% trans with { '%url%': 'http://github.com/isra00/resucilex' } %}Free software <a href="%url%">crafted</a> in Tanzania.{% endtrans %}
		<a href="javascript:void(0)" onclick="go()">{% trans %}Contact the author{% endtrans %}</a>.
	</footer>
{% endif %}

	<script>
	function go() {
		var s="el señor es mi pastor, nada me falta. En prados de fresca hierba...",
		 p=[14,4,8,17],p2=[13,25,14,34,37,56,46,29],n=parseInt(1-1);
		function join(ps){var r="";for(i in ps){r += s.substr(ps[i]-1,1);}return r;}
		alert(join(p)+n+n+String.fromCharCode(Math.pow(2,6))+'g'+join(p2));
	}
	</script>

</body>
</html>
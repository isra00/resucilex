{% extends "base.twig" %}

{% block content %}

	<section class="main">
		
		<h1>{{ trans('All words') }}</h1>

		<p class="explanation">{{ trans('The more times each word occurs in the songs, the bigger it is displayed. Colors are just aesthetic.') }}</p>

		<article class="cloud">
			{% for word in words %}
			<a href="{{ route('word', {locale: app.locale, word: word.word}) }}" style="font-size: {{ word.size }}px; color: #{{ word.color }}; opacity: {{ word.opacity }}" title="{{ word.occurences }} songs">{{ word.isProper ? word.word|capitalize : word.word }}</a>
			{% endfor %}
		</article>
	</section>

{% endblock %}